{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
<div id="content" class="main-content">
    <div class="layout-px-spacing">
     <div class="row layout-top-spacing">

            <div class="col-xl-8 col-lg-12 col-md-12 col-sm-12 col-12 layout-spacing">
                <div class="widget widget-chart-one">
                    <div class="widget-heading">

                    <table class="table">
                        <thead>
                            <tr>
                                <th>Num°</th>
                                <th>Nom </th>
                                <th>Description</th>
                                <th>Status</th>
                                <th> Début</th>
                                <th> Fin</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for event in events %}
                            <tr>
                                <td>{{ event.idEvent }}</td>
                                <td>{{ event.nomEvent }}</td>
                                <td>{{ event.descriptionEvent }}</td>
                                <td>{{ event.isactive }}</td>
                                <td>{{ event.dateDebEvent ? event.dateDebEvent|date('Y-m-d') : '' }}</td>
                                <td>{{ event.dateFinEvent ? event.dateFinEvent|date('Y-m-d') : '' }}</td>
                                <td>
                                    <a href="{{ path('event_show', {'idEvent': event.idEvent}) }}">Afficher</a>
                                    <a href="{{ path('event_edit', {'idEvent': event.idEvent}) }}">Moddifier</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    
                   </div>
                </div>
                                       <a href="{{ path('event_new') }}" class="btn btn-primary ml-3 mt-3">Ajouter Event</a>

            </div>
        </div>
    </div>
</div>
{% endblock %}
