{% extends 'base.html.twig' %}

{% block title %} List Commentaire {% endblock %}

{% block body %}
<div id="content" class="main-content">
    <div class="layout-px-spacing">
        <div class="row layout-top-spacing">
            <br>
            <br>
            <br>
            <div class="col-xl-8 col-lg-12 col-md-12 col-sm-12 col-12 layout-spacing">
                <div class="widget widget-chart-one">
                    <div class="widget-heading">
    <table class="table">
        <thead>
            <tr>
                <th>ID Commentaire</th>
                <th>Commentaire</th>
                <th>Utilisateur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentairee in commentairees %}
            <tr>
                <td>{{ commentairee.idC }}</td>
                <td>{{ commentairee.comment }}</td>
                <td>{{ commentairee.iduser }}</td>
                <td>
                    <a href="{{ path('commentairee_show', {'idC': commentairee.idC}) }}">Afficher</a>
                    <a href="{{ path('commentairee_edit', {'idC': commentairee.idC}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


                    </div>
                </div>
                <a href="{{ path('commentairee_new') }} " class="btn btn-primary ml-3 mt-3">Ajouter Commentaire</a>

            </div>
        </div>
    </div>
</div>
{% endblock %}
