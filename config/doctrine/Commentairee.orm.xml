<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="App\Entity\Commentairee" table="commentairee">
    <indexes>
      <index name="CommentEvent" columns="ID_Event"/>
    </indexes>
    <id name="idC" type="integer" column="ID_C">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="comment" type="string" column="Comment" length="250" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="iduser" type="integer" column="iduser" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <many-to-one field="idEvent" target-entity="Event" fetch="LAZY">
      <join-columns>
        <join-column name="ID_Event" referenced-column-name="ID_Event"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
